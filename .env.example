# Environment Variables Template for Production Deployment
# Copy this file to .env and fill in your actual values

# OAuth Provider Credentials (Required for SSO)
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here

# Production JWT Secret (Generate a secure 256-bit key)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_at_least_256_bits_long_for_production

# Production Database (Railway will provide this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# CORS Origins (Update after frontend deployment)
CORS_ORIGINS=https://your-vercel-app.vercel.app,https://your-custom-domain.com

# SMTP Configuration for Production Email Sending
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com
SMTP_ENABLE_SSL=true

# Frontend API URL (Update after backend deployment)
VITE_API_URL=https://your-railway-app.railway.app

# Monitoring and Logging (Optional)
LOG_LEVEL=Information
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Security Headers (Optional)
SECURITY_HEADERS_ENABLED=true

# Feature Flags (Optional)
ENABLE_SWAGGER_IN_PRODUCTION=false
ENABLE_DETAILED_ERRORS=false